@{
    Layout = "";
}
<script src="~/Resources/js/jquery-1.9.1.js"></script>


<br />

<table>
    <tr>
        <td>Name:</td>
        <td><input type="text" id="fileName" style=" width:550px" /></td>
    </tr>
    <tr>
        <td>File:</td>
        <td><input type="file" id="file" /></td>
    </tr>
    <tr>
        <td></td>
        <td><input type="button" id="btnUpload" value="Upload" /></td>
    </tr>
    <tr>
        <td colspan="2"><progress id="fileProgress" style="display: none"></progress></td>
    </tr>
</table>
<hr />
<span id="lblMessage" style="color: Green"></span>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#file").change(function () {
            UploadFile();
        });
    });
    function UploadFile() {
        //$("body").on("click", "#btnUpload", function () {
        var formData = new FormData();
        formData.append("fileName", $("#fileName").val());
        formData.append("file", $("#file")[0].files[0]);
        $.ajax({
            // url: '/api/FileAPI/UploadFiles',
            url: '/Ajax/UploadFiles_FileNang',
            type: 'POST',
            data: formData,
            cache: false,
            contentType: false,
            processData: false,
            success: function (fileName) {
                $("#fileProgress").hide();
                $("#lblMessage").html("<b>" + fileName + "</b> has been uploaded.");
                //alert(fileName.link);
                $('#fileName').val(fileName.link)

            },
            xhr: function () {
                var fileXhr = $.ajaxSettings.xhr();
                if (fileXhr.upload) {
                    $("progress").show();
                    fileXhr.upload.addEventListener("progress", function (e) {
                        if (e.lengthComputable) {
                            $("#fileProgress").attr({
                                value: e.loaded,
                                max: e.total
                            });
                        }
                    }, false);
                }
                return fileXhr;
            }
        });
        //});

    }
</script>

