@model VS.ECommerce_MVC.Controllers.API_ProdutcsController.Root
@{
    var temp = Model.data;
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>
<div id="updatePanel" style="width:90%; padding:10px; margin:0 auto;">
    <table class="table table-responsive table-striped table-bordered">
        <thead>
            <tr>
                <th style="background-color: Yellow;color: blue">Name</th>
                <th style="background-color: Yellow;color: blue">Price</th>
                <th style="background-color: Yellow;color: blue">Brief</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in temp)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ProductCode</td>
                    <td>@Html.Raw(item.BranchName)</td>
                </tr>
            }
        </tbody>
    </table>
</div>