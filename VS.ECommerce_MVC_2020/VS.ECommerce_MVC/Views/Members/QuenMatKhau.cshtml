@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{
    <script src="/Resources/ScripMvc/ThongBao.js"></script>
}
@using (Html.BeginForm())
{
    <section class="margin-top-30">
        <div class="wrap_ padding_mobile">
            <div class="row">
                <div class="section_maps">
                    <div class="container max767 title_head margin-bottom-20">
                        <div class="page_title page__ ">
                            <h1 class="title_page_h1"><span>Đổi mật khẩu</span></h1>
                        </div>
                    </div>
                    <div class="container contact contact-owf">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="page-login page_cotact">
                                    <div id="pagelogin">
                                        <div class="contact-form">
                                            @if (TempData["AlertMessage"] != null)
                                            {
                                                <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                                                    @TempData["AlertMessage"]
                                                </div>
                                            }
                                            <div class="form-signup clearfix">
                                                <div class="group_contact row">
                                                    <fieldset class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 cancot">
                                                        <label class="">Email của bạn: </label>
                                                        <div class="TextBox">
                                                            @Html.TextBox("txtemail", "", new { placeholder = "Nhập email của bạn" })
                                                        </div>
                                                        <p style="color:red;" id="TB_TenKH"></p>
                                                    </fieldset>
                                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 a-left">
                                                        <input type="submit" value="Lấy lại mật khẩu" class="btnmvc" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}